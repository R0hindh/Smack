<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/userProfileImageNavHeader"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loginBtnNavHeader"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/userNameNavHeader"
            app:layout_constraintStart_toEndOf="@+id/userProfileImageNavHeader"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userProfileImageNavHeader" tools:text="Rohindh"
            android:fontFamily="@font/montserrat" android:text="Rohindh"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userMailNavHeader"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader" app:layout_constraintStart_toEndOf="@+id/userProfileImageNavHeader"
            android:layout_marginStart="8dp" tools:text="rohindhrock2411@gmail.com"
            android:text="rohindhrock2411@gmail.com"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/loginBtnNavHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/montserrat"
            android:background="@android:color/transparent" android:textAlignment="center"
            android:onClick="onLoginNavHeaderClicked"/>
    <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelBtn"
            android:scaleType="fitCenter" android:background="@android:color/transparent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onAddChannelClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>
